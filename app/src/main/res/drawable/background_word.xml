<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#d1c7b8"/>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="@color/colorPrimaryDark"/>
        </shape>
    </item>
</layer-list>

