<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 边框颜色值 -->
    <item>
        <shape>
            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"/>
        </shape>
    </item>

    <!-- 主体背景颜色值 -->
    <item
        android:top="1dp"
        android:bottom="-50dp">
        <shape>
            <solid android:color="#fff"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

</layer-list>
